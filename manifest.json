{
  "manifest_version": 3,
  "name": "Site Tracker Detector",
  "version": "1.0",
  "description": "Shows which known trackers are present on the sites you visit.",
  "permissions": [
    "webRequest",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Show site trackers"
  },
  "homepage_url": "https://example.com/"
}
